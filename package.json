{
  "name": "playwright-assessment-saucedemo",
  "version": "1.0.0",
  "description": "Playwright automation testing suite for SauceDemo website - Assessment Project",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:ui": "npx playwright test --ui",
    "test:chrome": "npx playwright test --project=chromium",
    "bdd": "npx cucumber-js",
    "bdd:headless": "npx cucumber-js --profile headless --format @cucumber/pretty-formatter --format allure-cucumberjs/reporter --format-options '{\"resultsDir\": \"allure-results\"}'",
    "bdd:headless:verbose": "VERBOSE=true npx cucumber-js --profile headless --format @cucumber/pretty-formatter --format allure-cucumberjs/reporter --format-options '{\"resultsDir\": \"allure-results\"}'",
    "bdd:fast": "npx cucumber-js --profile fast",
    "bdd:ci": "npx cucumber-js --profile ci",
    "bdd:smoke": "npx cucumber-js --tags '@smoke'",
    "bdd:smoke:headless": "npx cucumber-js --profile headless --tags '@smoke' --format @cucumber/pretty-formatter --format allure-cucumberjs/reporter --format-options '{\"resultsDir\": \"allure-results\"}'; node scripts/test-summary.js",
    "bdd:smoke:headless:verbose": "VERBOSE=true npx cucumber-js --profile headless --tags '@smoke' --format @cucumber/pretty-formatter --format allure-cucumberjs/reporter --format-options '{\"resultsDir\": \"allure-results\"}'",
    "bdd:login": "npx cucumber-js --tags '@login'",
    "bdd:login:headless": "npx cucumber-js --profile headless --tags '@login' --format @cucumber/pretty-formatter --format allure-cucumberjs/reporter --format-options '{\"resultsDir\": \"allure-results\"}'",
    "bdd:login:headless:verbose": "VERBOSE=true npx cucumber-js --profile headless --tags '@login' --format @cucumber/pretty-formatter --format allure-cucumberjs/reporter --format-options '{\"resultsDir\": \"allure-results\"}'",
    "bdd:login:basic": "npx cucumber-js --tags '@login and not @data-driven'",
    "bdd:login:data-driven": "npx cucumber-js --tags '@login and @data-driven'",
    "bdd:data-driven": "npx cucumber-js --tags '@data-driven'",
    "bdd:cart": "npx cucumber-js --tags '@cart'",
    "bdd:cart:headless": "npx cucumber-js --profile headless --tags '@cart' --format @cucumber/pretty-formatter --format allure-cucumberjs/reporter --format-options '{\"resultsDir\": \"allure-results\"}'",
    "bdd:cart:headless:verbose": "VERBOSE=true npx cucumber-js --profile headless --tags '@cart' --format @cucumber/pretty-formatter --format allure-cucumberjs/reporter --format-options '{\"resultsDir\": \"allure-results\"}'",
    "bdd:cart:persistence": "npx cucumber-js --tags '@cart and @persistence'",
    "bdd:checkout": "npx cucumber-js --tags '@checkout'",
    "bdd:checkout:headless": "npx cucumber-js --profile headless --tags '@checkout' --format @cucumber/pretty-formatter --format allure-cucumberjs/reporter --format-options '{\"resultsDir\": \"allure-results\"}'",
    "bdd:checkout:headless:verbose": "VERBOSE=true npx cucumber-js --profile headless --tags '@checkout' --format @cucumber/pretty-formatter --format allure-cucumberjs/reporter --format-options '{\"resultsDir\": \"allure-results\"}'",
    "bdd:checkout:price-calculation": "npx cucumber-js --tags '@price-calculation'",
    "bdd:sorting": "npx cucumber-js --tags '@sorting'",
    "bdd:sorting:headless": "npx cucumber-js --profile headless --tags '@sorting' --format @cucumber/pretty-formatter --format allure-cucumberjs/reporter --format-options '{\"resultsDir\": \"allure-results\"}'",
    "bdd:sorting:headless:verbose": "VERBOSE=true npx cucumber-js --profile headless --tags '@sorting' --format @cucumber/pretty-formatter --format allure-cucumberjs/reporter --format-options '{\"resultsDir\": \"allure-results\"}'",
    "bdd:authenticated": "npx cucumber-js --tags '@authenticated'",
    "bdd:allure": "npx cucumber-js --format allure-cucumberjs/reporter --format-options '{\\\"resultsDir\\\": \\\"allure-results\\\"}'",
    "bdd:login:allure": "npx cucumber-js --tags '@login' --format allure-cucumberjs/reporter --format-options '{\\\"resultsDir\\\": \\\"allure-results\\\"}'",
    "bdd:login:basic:allure": "npx cucumber-js --tags '@login and not @data-driven' --format allure-cucumberjs/reporter --format-options '{\\\"resultsDir\\\": \\\"allure-results\\\"}'",
    "bdd:login:data-driven:allure": "npx cucumber-js --tags '@login and @data-driven' --format allure-cucumberjs/reporter --format-options '{\\\"resultsDir\\\": \\\"allure-results\\\"}'",
    "bdd:data-driven:allure": "npx cucumber-js --tags '@data-driven' --format allure-cucumberjs/reporter --format-options '{\\\"resultsDir\\\": \\\"allure-results\\\"}'",
    "bdd:cart:allure": "npx cucumber-js --tags '@cart' --format allure-cucumberjs/reporter --format-options '{\\\"resultsDir\\\": \\\"allure-results\\\"}'",
    "bdd:cart:persistence:allure": "npx cucumber-js --tags '@cart and @persistence' --format allure-cucumberjs/reporter --format-options '{\\\"resultsDir\\\": \\\"allure-results\\\"}'",
    "bdd:checkout:allure": "npx cucumber-js --tags '@checkout' --format allure-cucumberjs/reporter --format-options '{\\\"resultsDir\\\": \\\"allure-results\\\"}'",
    "bdd:checkout:price-calculation:allure": "npx cucumber-js --tags '@price-calculation' --format allure-cucumberjs/reporter --format-options '{\\\"resultsDir\\\": \\\"allure-results\\\"}'",
    "bdd:sorting:allure": "npx cucumber-js --tags '@sorting' --format allure-cucumberjs/reporter --format-options '{\\\"resultsDir\\\": \\\"allure-results\\\"}'",
    "bdd:smoke:allure": "npx cucumber-js --tags '@smoke' --format allure-cucumberjs/reporter --format-options '{\\\"resultsDir\\\": \\\"allure-results\\\"}'",
    "allure:clean": "rm -rf allure-results allure-report",
    "allure:clean-results": "rm -rf allure-results",
    "allure:clean-report": "rm -rf allure-report",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "nuclear:inject": "node scripts/nuclear-option.js",
    "bdd:nuclear": "npx cucumber-js --profile headless --format @cucumber/pretty-formatter --format allure-cucumberjs/reporter; node scripts/nuclear-option.js; npm run allure:generate",
    "bdd:nuclear:failing": "npx cucumber-js --profile headless --tags '@different-user' --format @cucumber/pretty-formatter --format allure-cucumberjs/reporter; node scripts/nuclear-option.js; npm run allure:generate",
    "bdd:allure:serve": "npm run bdd:allure && npm run allure:serve",
    "bdd:login:allure:serve": "npm run bdd:login:allure && npm run allure:serve",
    "bdd:login:basic:allure:serve": "npm run bdd:login:basic:allure && npm run allure:serve",
    "bdd:login:data-driven:allure:serve": "npm run bdd:login:data-driven:allure && npm run allure:serve",
    "bdd:data-driven:allure:serve": "npm run bdd:data-driven:allure && npm run allure:serve",
    "bdd:cart:allure:serve": "npm run bdd:cart:allure && npm run allure:serve",
    "bdd:cart:persistence:allure:serve": "npm run bdd:cart:persistence:allure && npm run allure:serve",
    "bdd:checkout:allure:serve": "npm run bdd:checkout:allure && npm run allure:serve",
    "bdd:checkout:price-calculation:allure:serve": "npm run bdd:checkout:price-calculation:allure && npm run allure:serve",
    "bdd:sorting:allure:serve": "npm run bdd:sorting:allure && npm run allure:serve",

    "lint": "eslint src/ features/ --ext .js",
    "lint:fix": "eslint src/ features/ --ext .js --fix",
    "lint:check": "eslint src/ features/ --ext .js --max-warnings 0",
    "generate-report": "node scripts/generate-cucumber-report.js",
    "prepare": "husky"
  },
  "keywords": [
    "playwright",
    "testing",
    "automation",
    "javascript",
    "saucedemo",
    "e2e",
    "page-object-model"
  ],
  "author": "Quality Engineer Assessment",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@cucumber/cucumber": "^11.3.0",
    "@cucumber/pretty-formatter": "^1.0.1",
    "@playwright/test": "^1.49.1",
    "allure-cucumberjs": "^3.3.0",
    "eslint": "^9.29.0",
    "husky": "^9.1.7"
  }
}
